@import 'nib'

:local(.Skier)
  position absolute
  top 50%
  transform translateY(-50%)
  left 0
  right 0
  text-align center
  img
    &.right
      transform rotateY(180deg)
:local(.Tree)
  position absolute
:local(.Stats)
  position absolute
  top 0
  right 0
  padding 0 1em
  border 2px solid black
  font-family Monaco, monospace
  text-transform uppercase
  font-weight bold
:local(.Jump)
  background lime
  width 40px
  height 9px
  position absolute
  &:before
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    content ''
    border-top 3px solid blue
    border-bottom 3px solid pink